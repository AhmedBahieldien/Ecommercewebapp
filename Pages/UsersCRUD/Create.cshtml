@page
@model MYAPP.Pages.UsersCRUD.CreateModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Create";
}

    
<br /><br /><br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label  class="control-label">Email:</label>
                <input type="text" asp-for="Searchuser" class="form-control" data-val-required="The Email field is required." />
                <span asp-validation-for="Searchuser" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label  class="control-label">Password:</label>
                <input type="password" asp-for="Searchpass" class="form-control" data-val="true"
                       data-val-required="The Password field is required." />
                <span asp-validation-for="Searchpass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-default" />
               
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
