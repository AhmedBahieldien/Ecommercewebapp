@page
@model MYAPP.Pages.UsersCRUD.ScreateModel
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Screate";
}
   
<br /><br /><br />    

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="user.email" class="control-label">Email:</label>
                <input type="text" asp-for="user.email" class="form-control" data-val-required="The Email field is required." />
                <span asp-validation-for="user.email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="user.password" class="control-label">Password:</label>
                <input type="password" asp-for="user.password" class="form-control" data-val="true"
                       data-val-required="The Password field is required." />
                <span asp-validation-for="user.password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Searchpass1" class="control-label">Password confirmation:</label>
                <input type="password" asp-for="Searchpass1" class="form-control" data-val="true" data-val-required="The Password field is required." />
                <span asp-validation-for="Searchpass1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign up" class="btn btn-default" />
            </div>
        </form>
        @{
            if (Model.error != null)
            {
                <div class="alert alert-danger">
                    <strong>Error! </strong>  @Model.error
                </div>
            }
        }
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
